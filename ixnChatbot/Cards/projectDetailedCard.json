{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.0",
  "body": [
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "Image",
              "url": "https://pbs.twimg.com/profile_images/1158774308086386690/EAQg-OKY_400x400.jpg",
              "size": "Small",
              "width": "70px",
              "horizontalAlignment": "Center",
              "spacing": "None",
              "backgroundColor": ""
            }
          ],
          "verticalContentAlignment": "Center"
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "Chatbot For Medical Development",
              "horizontalAlignment": "Center",
              "wrap": true,
              "size": "Medium",
              "weight": "Bolder"
            },
            {
              "type": "TextBlock",
              "text": "Royal College of General Practitioners",
              "weight": "Lighter",
              "horizontalAlignment": "Center",
              "spacing": "None",
              "maxLines": 1
            }
          ],
          "horizontalAlignment": "Center",
          "height": "stretch",
          "verticalContentAlignment": "Center"
        }
      ],
      "bleed": true,
      "minHeight": "0px"
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "UCL Project",
          "spacing": "None",
          "size": "Medium",
          "weight": "Bolder"
        },
        {
          "type": "TextBlock",
          "text": "Led by Joseph Connor",
          "spacing": "None"
        },
        {
          "type": "TextBlock",
          "text": "Uploaded On 22/10/2019",
          "spacing": "None",
          "weight": "Lighter",
          "color": "Dark"
        }
      ],
      "style": "emphasis",
      "spacing": "Small"
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Project Description"
    },
    {
      "type": "Action.Submit",
      "title": "Skills, Data and Devices Required"
    },
    {
      "type": "Action.Submit",
      "title": "Organization Details"
    },
    {
      "type": "Action.Submit",
      "title": "Contact Details"
    }
  ]
}